{% from 'macros.jinja' import render_keyval %}

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        <link href="../static/main.css" rel="stylesheet">
        <title>Checkout Resource</title>
    </head>
    <body>
        {% include 'navbar.jinja' %}    
        <div id="main-container" class="bg-body-tertiary shadow-sm rounded-4">
            <h1>Checkout</h1>
            <div class="container asset-container">
                {{ render_keyval(asset_data) }}
                <img src="{{ asset_data['Image'] }}" class="image-fluid rounded" alt="Asset" style="margin-top: 2%;">
            </div>
            <a class="btn btn-outline-primary" href={{ asset_url }} target="_blank">View Resource Page</a>
            <h1 class="border-top border-3" id="user-info-header">User Info</h1>
            <div class="container asset-container">
                {{ render_keyval(user_data) }}
            </div>
            {% if asset_data['Assigned to']=="None" %}
                <div class="alert alert-warning" role="alert">
                    By Confirming, you accept the responsibility of the resource.
                </div>
                <a class="btn btn-success" href="/self-checkout/confirm">
                    Confirm Checkout
                </a>
            {% else %}  
                <button type="button disabled" class="btn btn-danger">
                    Cannot Checkout
                </button>
            {% endif %}
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    </body>
</html>